import ac ;
import regex ;
import testing ;

using libjpeg : : : : true ; # work around bug on master
using libpng : : : : true ;

project
    : # requirements
    ;

# TODO: Add missing examples

local sources =
    adaptive_he.cpp
    adaptive_threshold.cpp
    affine.cpp
    anisotropic_diffusion.cpp
    convolution.cpp
    convolve2d.cpp
    dynamic_image.cpp
    harris.cpp
    hessian.cpp
    histogram_equalization.cpp
    histogram_matching.cpp
    histogram.cpp
    hough_transform_circle.cpp
    hough_transform_line.cpp
    interleaved_ptr.cpp
    mandelbrot.cpp
    morphology.cpp
    packed_pixel.cpp
    rasterizer_circle.cpp
    rasterizer_ellipse.cpp
    rasterizer_line.cpp
    resize.cpp
    sobel_scharr.cpp
    threshold.cpp
    tutorial_histogram.cpp
    x_gradient.cpp
    ;

local targets ;

for local s in $(sources)
{
targets +=
    [ exe [ regex.replace $(s)  ".cpp" "" ] :
        $(s)
	/libjpeg//libjpeg
	/libpng//libpng
    ]
    ;
}

alias examples : $(targets) ;
